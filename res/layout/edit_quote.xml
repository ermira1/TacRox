<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quotebg"
    
    >
    
 <TextView
     android:id="@+id/editNewItemsTittle"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:gravity="center"
     android:text="@string/edit_quote_title"
     android:background="#80339900" 
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:onClick="saveItem"
        android:text="@string/saveEdit"
        android:background="#33339900" 
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/itemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/Quote"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <EditText
        android:id="@+id/textAuthor"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/amountTextView"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        android:background="#33999999" 
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/Author"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <EditText
        android:id="@+id/textQuote"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:background="#33999999" 
        android:layout_alignParentRight="true"
        android:layout_below="@+id/itemTextView"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:layout_height="60dp"
        android:inputType="textMultiLine" />
   
   </RelativeLayout>